{
  "compilerOptions": {
    "module": "es6",
    "target": "ES2015",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}